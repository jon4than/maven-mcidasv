<?xml version="1.0" encoding="UTF-8"?>
<skin embedded="true">
  <ui>
    <panel layout="border">
      <idv.menubar place="North"/>
      <panel
         layout="border"
         place="Center">
        <panel
           layout="flow"
           place="North">
          <idv.toolbar
             id="idv.toolbar"
             place="West"/>
          <panel
             id="idv.favoritesbar"
             place="North"/>
        </panel>
        <panel
           embeddednode="true"
           layout="grid"
           cols="2"
           place="Center">
          <idv.view
             viewid="viewleft%version%"
             id="viewleft"
             properties="name=Panel 1;clickToFocus=true;useGlobeDisplay=true;shareViews=true;showEarthNavPanel=false;showControlLegend=false;size=300:400;shareGroup=view%versionuid%;initialMapResources=/edu/wisc/ssec/mcidasv/resources/maps.xml;"/>
          <idv.view
             viewid="viewright%version%"
             id="viewright"
             properties="name=Panel 2;clickToFocus=true;showToolBars=false;shareViews=true;showEarthNavPanel=false;showControlLegend=false;size=300:400;shareGroup=view%versionuid%;useGlobeDisplay=true;initialMapResources=/edu/wisc/ssec/mcidasv/resources/maps.xml;;"/>
        </panel>
      </panel>
      <idv.statusbar place="South" />
    </panel>
  </ui>
  <styles>
    <style
       class="iconbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip);ui.setBorder(this,etched);"
       mouse_exit="ui.setText(idv.messagelabel,);ui.setBorder(this,button);"/>
    <style
       class="textbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip)"
       mouse_exit="ui.setText(idv.messagelabel,)"/>
  </styles>
  <components/>
  <properties>
    <property
       name="icon.wait.wait"
       value="/ucar/unidata/idv/images/wait.gif"/>
  </properties>
</skin>
