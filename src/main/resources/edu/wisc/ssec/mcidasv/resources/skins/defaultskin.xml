<?xml version="1.0" encoding="UTF-8"?>
<skin>
  <ui>
    <panel layout="border">
      <idv.menubar place="North"/>
      <panel place="Center" layout="border">
        <idv.toolbar id="idv.toolbar" place="North"/>
        <idv.component.group name="Group" layout="tabs" id="comp1" layout_columns="${layout_columns}">
          <idv.component.skin border="empty" name="Map View&gt;A Pane" place="Center" url="idv.skin.oneview.map"/>
        </idv.component.group>
      </panel>
      <idv.statusbar place="South"/>
    </panel>
  </ui>
  <styles>
    <style
       class="iconbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip);ui.setBorder(this,etched);"
       mouse_exit="ui.setText(idv.messagelabel,);ui.setBorder(this,button);"/>
    <style
       class="textbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip)"
       mouse_exit="ui.setText(idv.messagelabel,)"/>
  </styles>
  <components/>
  <properties>
    <property
       name="icon.wait.wait"
       value="/ucar/unidata/idv/images/wait.gif"/>
  </properties>
</skin>
